<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/admin.css">
    <title>View Student Profile</title>
</head>
<body>
    <div class="functionPage">
        <div class="glass">
            <% if(locals.selectedStudent){ %>
                <p class="text-heading">View Student Profile</p>
                <div class="main">
                    <div class="left">
                        <p>Name: <%= selectedStudent.name %></p>
                        <p>Phone Number: <%= selectedStudent.phone %></p>
                        <p>Father's Name: <%= selectedStudent.father_name %></p>
                    </div>
                    <div class="right">
                        <p>Username: <%= selectedStudent.username %></p>
                        <p>Type: <%= selectedStudent.type %></p>
                        <p>Previous Grade: <%= selectedStudent.previousgrade %></p>
                    </div>
                </div>
            <% }else{ %>
                <form action="/search_viewstudent" method="post" class="functionForm">
                    <input type="search" name="search" placeholder="Search">
                    <input type="submit" value="Search Student" class="btn">
                </form>
                <% if(locals.students){ %>
                <div class="searchResults">
                    <% students.forEach((student, i) => {%>
                        <form action="/search_viewstudent/<%- student.username %>" method="post" class="student">
                            <span>Name: <%= student.name %></span>
                            <span>Father's Name: <%= student.father_name %></span>
                            <span>Username: <%= student.username %></span>
                            <span><input type="submit" value="View" class="btn"></span>
                        </form>
                    <% }); %>
                </div>
                <% }else if(locals.message){ %>
                    <div class="message">
                        <p><%= message %></p>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
</body>
</html>